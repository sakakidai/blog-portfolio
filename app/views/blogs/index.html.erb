<%= render "shared/default_top_image" %>

<div class='container'>
  <% if @post_ranking %>
    <h2>投稿の多いユーザー</h2>
    <div class='row'>
      <% @post_ranking.each do |user| %>
        <div class='col-lg-3 col-6'>
          <%= render 'users/avatar', user: user %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @favarite_ranking %>
    <h2>いいねが多い投稿</h2>
    <div class='row'>
      <% @favarite_ranking.each do |blog| %>
        <div class='col-lg-3 col-6'>
          <p>タイトル：<%= link_to blog.title, blog_path(blog) %></p>
          <%= render "favarites/favarite", blog: blog %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-8'>
      <h1>記事一覧</h1>
      <%= render @blogs %>
      <%= paginate @blogs %>
    </div>
    <div class='col-md-4'>
      <h2>カテゴリー一覧</h2>
      <div class='row'>
        <% @categories.each do |category| %>
          <div class='col-3'>
            <%= link_to category.name, category_path(category), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

      <h2>写真のある投稿</h2>
      <div class='row'>
        <% @images.each do |image| %>
          <div class='col-6'>
            <%= image_tag image.blog_img, class: "avatar-image" if image.blog_img? %>
          </div>
          <div class='col-6'>
            <%= image.blog.title %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


  