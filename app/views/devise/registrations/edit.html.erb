
<h1 class='form-header'>アカウントの編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
  </div>

  <div class='form-group'>
    <div class="col-6 pl-0">
      <%= f.label :color %>
      <%= f.text_field :color, class: "form-control", placeholder: "フォントカラー" %>
    </div>
    <%= react_component('Colorpicker', { color: prefered_color, selector: "user_color" }) %>
  </div>
  
  <div class='form-group'>
    <%= f.object.top_image.present? ? image_tag((f.object.top_image.url), class: "mb-3 avatar-image") : content_tag(:span, "イメージがありません") %>
    <%= f.file_field :top_image, class: 'form-control', accept: 'image/jpeg,image/gif,image/png' %>
  </div>

  <div class='form-group'>
    <%= f.object.avatar.present? ? image_tag((f.object.avatar.url), class: "mb-3 avatar-image") : content_tag(:span, "イメージがありません") %>
    <%= f.file_field :avatar, class: 'form-control', accept: 'image/jpeg,image/gif,image/png' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
    <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
  </div>

  <div class="form-group">
    <%= f.submit t('.update'), class: 'btn btn-primary' %>
  </div>
<% end %>

<span class="user_delete_button">
  <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>
</span>
</br>
<p align='center'><%= link_to t('.back'), :back %></p>  


<script type="text/javascript">
  $('#user_top_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
  $('#user_avatar').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>

