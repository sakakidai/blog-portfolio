<% if user.avatar_img? %>
  <div class='triangle'>
    <%= content_tag(:div, "#{ @post_ranking.index(user) + 1 }", class: 'triangle-font') %>
    <%= link_to user_path(user) do %>
      <%= image_tag user.avatar_img, class: 'avatar-image' %>
    <% end %>
  </div>

<% else %>
  <div class='triangle'>
    <%= content_tag(:div, "#{ @post_ranking.index(user) + 1 }", class: 'triangle-font') %>
    <%= link_to user_path(user) do %>
      <%= image_tag "avatar-image.jpg", class: "avatar-image" %>
    <% end %>
  </div>
<% end %>

<h4 class='mb-0'><%= link_to user.name, user_path(user) %></h4>
<p class="mb-0">作成した記事：<%= user.blogs.count %>個</p>
<div class='row mt-2 mb-2'>
  <% if user.blogs.present? %>
    <% if user.blogs.first.first_img? %>
      <div class='col-4'>
        <%= image_tag user.blogs.first.first_img, class: "avatar-image" if user.blogs.first.first_img? %>
      </div>
      <div class='col-8'>
        <div class='lie-container'>
          <small><%= link_to user.blogs.first.title, blog_path(user.blogs.first) %></small><br>
          <small><%= user.blogs.first.created_at.to_s(:datetime_jp) %></small>
        </div>
      </div>
    <% else %>
      <div class='col-12'>
        <div class='lie-container'>
          </small><%= link_to user.blogs.first.title, blog_path(user.blogs.first) %></small><br>
          <small><%= user.blogs.first.created_at.to_s(:datetime_jp) %></small>
        </div>
      </div>
    <% end %>
  <% end %>
</div>